{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2022",
    "lib": [
        "es2023"
    ],

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "types": [
      "node",
      "jest"
    ],
    "rootDirs": [
      "packages/shared",
      "packages/project",
      "packages/bedrock-vanilla-data",
      "packages/bedrock-types",
      "packages/bedrock-commands",
      "packages/molang",
      "packages/bedrock-project",
      "packages/bedrock-diagnoser",
      "ide/shared",
      "ide/base/client",
      "ide/base/server",
      "ide/vscode"
    ],
    "paths": {
      "@blockception/packages-shared": ["./packages/shared"],
      "@blockception/ide-shared": ["./ide/shared"],
      "bc-minecraft-project": ["./packages/project"],
      "bc-minecraft-bedrock-vanilla-data": ["./packages/bedrock-vanilla-data"],
      "bc-minecraft-bedrock-types": ["./packages/bedrock-types"],
      "bc-minecraft-bedrock-command": ["./packages/bedrock-commands"],
      "bc-minecraft-molang": ["./packages/molang"],
      "bc-minecraft-bedrock-project": ["./packages/bedrock-project"],
      "bc-minecraft-bedrock-diagnoser": ["./packages/bedrock-diagnoser"],
      "bc-minecraft-lsp-client": ["./ide/base/client"],
      "bc-minecraft-lsp": ["./ide/base/server"],
    }
  },
  "references": [
    {
      "path": "tsconfig.json"
    },
    {
      "path": "./ide/base/client/tsconfig.json"
    },
    {
      "path": "./ide/base/server/tsconfig.json"
    },
    {
      "path": "./ide/shared/tsconfig.json"
    },
    {
      "path": "./ide/vscode/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-commands/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-diagnoser/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-project/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-types/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-vanilla-data/tsconfig.json"
    },
    {
      "path": "./packages/molang/tsconfig.json"
    },
    {
      "path": "./packages/project/tsconfig.json"
    },
    {
      "path": "./packages/shared/tsconfig.json"
    }
  ]
}