{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "node20",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2015",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2015"
    ],
    "downlevelIteration": true,
    "rootDirs": [
      "packages/shared",
      "packages/project",
      "packages/bedrock-vanilla-data",
      "packages/bedrock-types",
      "packages/bedrock-commands",
      "packages/molang",
      "packages/bedrock-project",
      "packages/bedrock-diagnoser",
      "ide/shared",
      "ide/base/client",
      "ide/base/server",
      "ide/vscode"
    ]
  },
  "references": [
    {
      "path": "tsconfig.json"
    },
    {
      "path": "./ide/base/client/tsconfig.json"
    },
    {
      "path": "./ide/base/server/tsconfig.json"
    },
    {
      "path": "./ide/shared/tsconfig.json"
    },
    {
      "path": "./ide/vscode/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-commands/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-diagnoser/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-project/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-types/tsconfig.json"
    },
    {
      "path": "./packages/bedrock-vanilla-data/tsconfig.json"
    },
    {
      "path": "./packages/molang/tsconfig.json"
    },
    {
      "path": "./packages/project/tsconfig.json"
    },
    {
      "path": "./packages/shared/tsconfig.json"
    }
  ]
}